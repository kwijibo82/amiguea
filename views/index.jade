extends layout

block content

    div.container
      div.jumbotron
        h1.seccion Hello!

        if user
          p Bienvenido, #{user.fullName}
          p
            a.small(href="profile") Edit my profile
          a.btn.btn-primary(href="/logout") Logout
        else
          p Bienvenido a Amiguea, ¿quieres empezar?
          p
            a.btn.btn-primary(href="/login") Login now
          p
            span.small ¿Aún no tienes cuenta?
            span &nbsp;
            a.small(href="/signup") Regístrate
  